
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  cli_id String @id @default(uuid())
  cli_name String @unique
  cli_gen Genero 
  cli_tel_id String @unique
  cli_tel Telefone? @relation(fields: [cli_tel_id], references: [tel_id], onDelete: Cascade)
  cli_dt_nasc DateTime
  cli_cpf String @unique
  cli_email String @unique
  cli_senha String
  cli_end Endereco[]
  cli_crt Cartao[]
  cli_status StatusCliente
  cli_crn Carrinhos[]
}

model Telefone {
  tel_id String @id @default(uuid())
  tel_tipo TipoTel
  tel_ddd String 
  tel_num String
  tel_client Client?
}

model Endereco {
  end_id String @id @default(uuid())
  end_resi TipoResidencia
  end_tlogra TipoLograd
  end_logra String
  end_num String
  end_bairro String
  end_cep String
  end_cidade String
  end_estado String
  end_pais String
  end_cli_id String
  end_res Boolean
  end_cob Boolean
  end_ent Boolean
  end_cli Client? @relation(fields: [end_cli_id], references: [cli_id], onDelete: Cascade)
}

model Cartao {
  crt_id String @id @default(uuid())
  crt_num String @unique
  crt_nome String
  crt_band TipoBandeira
  crt_validade String
  crt_cod_seg String
  crt_tipo TipoCartao
  crt_cli_id String
  crt_cli Client? @relation(fields: [crt_cli_id], references: [cli_id], onDelete: Cascade)
}

model Livros {
  lvr_id String @id @default(uuid())
  lvr_atr String
  lvr_ttl String
  lvr_ISBN String @unique
  lvr_ano Int
  lvr_num_pag Int
  lvr_snp String
  lvr_alt Float
  lvr_lar Float
  lvr_pes Float
  lvr_prf Float
  lvr_stt Boolean
  lvr_prc Float
  lvr_cod_brr String @unique
  lvr_cat Categorias[]
  lvr_pdr Produtos[]
}

model Categorias {
  cat_id String @id @default(uuid())
  cat_nome String
  cat_lvr Livros[]
}

model Produtos {
  pdr_id String @id @default(uuid())
  pdr_qtn Int
  pdr_lvr_id String
  pdr_lvr Livros? @relation(fields: [pdr_lvr_id], references: [lvr_id])
  pdr_vnd Vendas[]
  pdr_icr ItemCarrinhos[]
}

model Carrinhos {
  crn_id String @id @default(uuid())
  crn_icr ItemCarrinhos[]
  crn_cli_id String
  crn_cli Client @relation(fields: [crn_cli_id], references: [cli_id])
}

model ItemCarrinhos {
  icr_id String @id @default(uuid())
  icr_qtn Int
  icr_pdr_id String
  icr_pdr Produtos? @relation(fields: [icr_pdr_id], references: [pdr_id])
  icr_crn_id String
  icr_crn Carrinhos? @relation(fields: [icr_crn_id], references: [crn_id])
}

model Vendas {
  vnd_id String @id @default(uuid())
  vnd_dt_ent DateTime
  vnd_status TipoStatusVendas
  vnd_pdr Produtos[]
}

//enums
enum TipoCartao {
  Credito
  Debito
}
enum Genero {
  Masculino
  Feminino
  Outro
}

enum TipoTel {
  Fixo
  Movel
}

enum StatusCliente {
  Ativo
  Inativo
}

enum TipoLograd {
  Publico
  Privado
}

enum TipoResidencia {
  Casa
  Apartamento
}

enum TipoBandeira {
  Visa
  MasterCard
  AmeircanExpress
  Elo
  Hipercard
  Alelo
}

enum TipoStatusVendas {
  Pagamento_Realizado
  Pagamento_Rejeitado
  Em_Transporte
  Entregue
}