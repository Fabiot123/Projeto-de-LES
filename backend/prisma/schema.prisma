
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  cli_id String @id @default(uuid())
  cli_name String @unique
  cli_gen Genero 
  cli_tel_id String @unique
  cli_tel Telefone? @relation(fields: [cli_tel_id], references: [tel_id], onDelete: Cascade)
  cli_dt_nasc DateTime
  cli_cpf String @unique
  cli_email String @unique
  cli_senha String
  cli_end Endereco[]
  cli_crt Cartao[]
  cli_status StatusCliente
  cli_crn Carrinhos[]
  cli_trc Trocas []
}

model Telefone {
  tel_id String @id @default(uuid())
  tel_tipo TipoTel
  tel_ddd String 
  tel_num String
  tel_client Client?
}

model Endereco {
  end_id String @id @default(uuid())
  end_resi TipoResidencia
  end_tlogra TipoLograd
  end_logra String
  end_num String
  end_bairro String
  end_cep String
  end_cidade String
  end_estado String
  end_pais String
  end_cli_id String
  end_res Boolean
  end_cob Boolean
  end_ent Boolean
  end_cli Client? @relation(fields: [end_cli_id], references: [cli_id], onDelete: Cascade)
}

model Cartao {
  crt_id String @id @default(uuid())
  crt_num String @unique
  crt_nome String
  crt_band TipoBandeira
  crt_validade String
  crt_cod_seg String
  crt_tipo TipoCartao
  crt_cli_id String
  crt_cli Client? @relation(fields: [crt_cli_id], references: [cli_id], onDelete: Cascade)
}

model Livros {
  lvr_id String @id @default(uuid())
  lvr_atr String
  lvr_ttl String
  lvr_ISBN String @unique
  lvr_ano Int
  lvr_num_pag Int
  lvr_snp String
  lvr_alt Float
  lvr_lar Float
  lvr_pes Float
  lvr_prf Float
  lvr_stt Boolean
  lvr_prc Float
  lvr_cod_brr String @unique
  lvr_cat Categorias[]
  lvr_icr ItemCarrinhos[]
}

model Categorias {
  cat_id String @id @default(uuid())
  cat_nome String
  cat_lvr Livros[]
}

model Carrinhos {
  crn_id String @id @default(uuid())
  crn_icr ItemCarrinhos[]
  crn_cli_id String
  crn_cli Client @relation(fields: [crn_cli_id], references: [cli_id])
  crn_status TipoStatusVendas
  crn_cpn Cupons[]
}

model ItemCarrinhos {
  icr_id String @id @default(uuid())
  icr_qtn Int
  icr_lvr Livros @relation(fields: [icr_lvr_id], references: [lvr_id])
  icr_lvr_id String
  icr_crn Carrinhos @relation(fields: [icr_crn_id], references: [crn_id])
  icr_crn_id String
  icr_itc ItemTrocas []
}

model Trocas {
  trc_id String @id @default(uuid())
  trc_status TipoStatusTroca
  trc_itc ItemTrocas[]
  trc_cli_id String
  trc_cli Client @relation(fields: [trc_cli_id], references: [cli_id])
}

model ItemTrocas {
  itc_id String @id @default(uuid())
  itc_qtn Int
  itc_icr_id String
  itc_icr ItemCarrinhos @relation(fields: [itc_icr_id], references: [icr_id])
  itc_trc_id String
  itc_trc Trocas @relation(fields: [itc_trc_id], references: [trc_id])
}

model Cupons {
  cpn_id String @id @default(uuid())
  cpn_code String @unique
  cpn_dt_val DateTime?
  cpn_prc Float
  cpn_status TipoStatusCupom
  cpn_tipo TipoCupom
  cpn_crn_id String?
  cpn_crn Carrinhos? @relation(fields: [cpn_crn_id], references: [crn_id])
}

//enums
enum TipoCartao {
  Credito
  Debito
}
enum Genero {
  Masculino
  Feminino
  Outro
}

enum TipoTel {
  Fixo
  Movel
}

enum StatusCliente {
  Ativo
  Inativo
}

enum TipoLograd {
  Publico
  Privado
}

enum TipoResidencia {
  Casa
  Apartamento
}

enum TipoBandeira {
  Visa
  MasterCard
  AmeircanExpress
  Elo
  Hipercard
  Alelo
}

enum TipoStatusVendas {
  Em_Processamento
  Pagamento_Realizado
  Pedido_Cancelado
  Pagamento_Recusado
  Em_Transporte
  Entregue
}

enum TipoStatusTroca {
  Aberto
  Em_Troca
  Troca_Autorizada
  Troca_Recusada
  Troca_Realizada
}

enum TipoStatusCupom {
  Ativado
  Desativado
}

enum TipoCupom {
  Troca
  Promocional
}